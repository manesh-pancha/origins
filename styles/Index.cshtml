@model IEnumerable<project4.Models.styles>

@{
    ViewBag.Title = "Index";
}
@{
    int count = 0;
}

<h2>styles</h2>

<p>
    <a class="btn btn-default" href="/styles/Create">ADD new style</a>
</p>


<link href="~/Content/flexbox box Origins.css" rel="stylesheet" />
<link href="~/Content/styles.css" rel="stylesheet" />
<link href="~/Content/detailsO - Copy.css" rel="stylesheet" />

<div class="flexContainer">

    @foreach (var item in Model)
    {
        if (count % 4 == 0)
        {
            <br />
            <br />
        }
        <div class="dbItem">
            <a href="@Url.Action("Details", new {id= item.StylesID })">
                <img class="img-responsive" src="@Url.Content(item.image)" height="800" width="500" />

            </a>
            <h4>@Html.DisplayFor(m => item.style)</h4>
        </div>
        count++;

    }


</div>